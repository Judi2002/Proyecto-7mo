			EstadoBTN8 = 1;
		}

	if(digitalRead(BTN9) == HIGH){
			EstadoBTN9 = 1;
		}

	if(EstadoBTN0 == 1){
		Amarillo = 0;
		Serial.println(Amarillo, Magenta, Cian);
		EstadoBTN0 = 0;
	}
	else if(EstadoBTN1 == 1){
		Amarillo = 1;
		Serial.println(Amarillo, Magenta, Cian);
		EstadoBTN1 = 0;
	}
	else if(EstadoBTN2 == 1){
		Amarillo = 2;
		Serial.println(Amarillo, Magenta, Cian);
		EstadoBTN2 = 0;
	}
	else if(EstadoBTN3 == 1){
		Amarillo = 3;
		Serial.println(Amarillo, Magenta, Cian);
		EstadoBTN3 = 0;
	}
	else if(EstadoBTN4 == 1){
		Amarillo = 4;
		Serial.println(Amarillo, Magenta, Cian);
		EstadoBTN4 = 0;
	}
	else if(EstadoBTN5 == 1){
		Amarillo = 5;
		Serial.println(Amarillo, Magenta, Cian);
		EstadoBTN5 = 0;
	}
	else if(EstadoBTN6 == 1){
		Amarillo = 6;
		Serial.println(Amarillo, Magenta, Cian);
		EstadoBTN6 = 0;
	}
	else if(EstadoBTN7 == 1){
		Amarillo = 7;
		Serial.println(Amarillo, Magenta, Cian);
		EstadoBTN7 = 0;
	}
	else if(EstadoBTN8 == 1){
		Amarillo = 8;
		Serial.println(Amarillo, Magenta, Cian);
		EstadoBTN8 = 0;
	}
	else if(EstadoBTN9 == 1){
		Amarillo = 9;
		Serial.println(Amarillo, Magenta, Cian);
		EstadoBTN9 = 0;
	}
